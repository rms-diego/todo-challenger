generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todos {
  id          String   @id @default(uuid())
  hero        String
  description String
  userId      String
  isConclude  Boolean? @default(false)
  createdAt   DateTime @default(now())

  Files Files[]

  @@map("todos")
}

model Files {
  Todos   Todos  @relation(fields: [todosId], references: [id])
  todosId String

  fileUrl String
  id      String @id

  @@map("files")
}
